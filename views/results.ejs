<h1>Results Page</h1>

<form action="/results" method="GET">
	<input type="text" placeholder="Search Again" name="moviesearch">
	<input type="submit">
</form>

<div>
	<!-- refine the json chunk till the Search level. -->
	<% data["Search"].forEach(function(movie){ %> 
	<ul>
		<!-- Title and Year of release -->
		<strong><%= movie["Title"] %></strong> - 
		<%= movie["Year"] %> 
	</ul>
	<!-- Poster -->
	<a href="https://www.imdb.com/title/<%= movie["imdbID"]%>"><img src="<%= movie["Poster"] %>"></a>
	<% }) %>
</div>
